{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* If transpiling with a tool like tsup, this is important */
    "module": "preserve",
    "noEmit": true,

    /* Library code */
    "lib": ["es2022"]
  },
  "include": ["src", "test", "tsup.config.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
